<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_CompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tv_CompanyID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_CompanyName"
        />

    <EditText
        android:id="@+id/edtCompanyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Company Name"/>

    <EditText
        android:id="@+id/edtCompanyAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Company Address"/>

    <EditText
        android:id="@+id/edtCompanyPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Company Phone"/>

    <Button
        android:id="@+id/btn_Return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:layout_below="@id/tv_CompanyID"
        />

</LinearLayout>
